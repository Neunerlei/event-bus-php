{
    "name": "neunerlei/event-bus",
    "description": "This package contains a PSR-14 compliant event dispatcher facade, which aims to bring the listener provider and dispatcher objects closer together.",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Martin Neundorfer",
            "email": "code@neunerlei.eu",
            "homepage": "https://www.neunerlei.eu",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/neunerlei/event-bus-php/issues",
        "source": "https://github.com/neunerlei/event-bus-php"
    },
    "require": {
        "php": "^7.3",
        "neunerlei/container-autowiring-declaration": "^1.1",
        "psr/event-dispatcher": "^1.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "neunerlei/dbg": "^1.9",
        "phpunit/phpunit": "^9.2.5",
        "crell/tukio": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Neunerlei\\EventBus\\": "Classes"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-cover-clover": "phpunit --coverage-clover Tests/Coverage.xml",
        "test-cover": "phpunit --coverage-html Tests/Coverage"
    },
    "version": "2.0.0"
}
